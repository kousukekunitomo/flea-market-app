# ---- App ----
APP_NAME=Laravel
APP_ENV=local            # local / staging / production
APP_KEY=                 # 初回: php artisan key:generate で生成
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=ja
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ja_JP

LOG_CHANNEL=stack
LOG_LEVEL=debug

# ---- Database ----
DB_CONNECTION=mysql
DB_HOST=db               # Dockerの場合のサービス名。ローカルMySQLなら 127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel_db
DB_USERNAME=laravel_user
DB_PASSWORD=

# ---- Cache/Queue/Files ----
CACHE_DRIVER=file
QUEUE_CONNECTION=sync    # 本番は database/redis 推奨
FILESYSTEM_DISK=local

# ---- Session ----
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ---- Redis (必要な場合) ----
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ---- Mail ----
MAIL_MAILER=smtp
MAIL_HOST=mailhog        # 開発: MailHog、 本番はSMTPサーバを設定
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ---- AWS (使う場合のみ) ----
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ---- Vite ----
VITE_APP_NAME="${APP_NAME}"

# ---- Stripe ----
# 公開鍵はテスト用なら残してもOK。本番用はデプロイ環境で設定。
STRIPE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET=           # テスト/本番で個別設定（コミットしない）
STRIPE_WEBHOOK_SECRET=   # Stripe Dashboard or Stripe CLI の whsec（コミットしない）
